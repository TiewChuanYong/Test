@page "/order/edit/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager


<h3>Edit Orders</h3>
<FormComponent ButtonText="Update" OnValidSubmit="EditOrder" order="order" />

@code {
    [Parameter] public int id { get; set; }
    Order order = new Order();

    protected async override Task OnParametersSetAsync()
    {
        order = await
            _client.GetFromJsonAsync<Order>($"{Endpoints.OrderEndpoint}/{id}");
    }

    async Task EditOrder()
    {
        await _client.PutAsJsonAsync($"{Endpoints.OrderEndpoint}/{id}", order);
        _navManager.NavigateTo("/order/");
    }
}
